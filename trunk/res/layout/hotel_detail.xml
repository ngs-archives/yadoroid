<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView
		android:orientation="vertical"
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent"
		android:layout_weight="10"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:padding="10px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/detail_hotel_name"
				android:textSize="7pt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#ffffff"
				android:textStyle="bold"
				android:paddingBottom="10px"
				/>
			<LinearLayout
				android:orientation="horizontal"
				android:paddingBottom="10px"
				android:gravity="center_vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text="@string/kuchikomi_rating"
					android:textSize="5pt"
					android:textColor="#999999"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5px"
					/>
				<RatingBar
					android:id="@+id/detail_rating"
					android:isIndicator="true"
					android:numStars="5"
					android:stepSize="0.1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5px"
					style="?android:attr/ratingBarStyleSmall"
					/>
				<TextView
					android:id="@+id/detail_rating_point"
					android:textSize="5pt"
					android:textColor="#ffffff"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
			</LinearLayout>
			<TextView
				android:id="@+id/detail_onsen"
				android:textSize="5pt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#999999"
				android:paddingBottom="10px"
				/>
			<TextView
				android:id="@+id/detail_catch_copy"
				android:textSize="5pt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textColor="#ffffff"
				android:paddingBottom="10px"
				/>
			<TextView
				android:id="@+id/detail_caption"
				android:textSize="5pt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#999999"
				android:paddingBottom="20px"
				/>
			<ImageView
				android:id="@+id/detail_hotel_image"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				/>
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/detail_table"
				android:background="#666666"
				android:paddingBottom="1px"
				android:layout_marginTop="20px"
				android:stretchColumns="1"
				/>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:orientation="horizontal"
		android:padding="5px"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:text="@string/go_reserve"
				android:id="@+id/go_reserve_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10px"
			android:visibility="gone"
			/>
	</LinearLayout>
</LinearLayout>